<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<topology xmlns="http://jasmine.ow2.org/deployme-1.2">
    <!-- see schema source at http://jasmine.ow2.org/xsds/deployme-1.2.xsd
         and additional documentation at http://wiki.jasmine.ow2.org/xwiki/bin/view/Main/Deploy
    -->
    <machines>
        <machine name="localhost"/>
    </machines>
    <domains>
        <domain name="singleDomain">
            <configuration>
                <global_options/>
            </configuration>
            <servers>
                <server machine="localhost" name="singleServerName">
                    <configuration>
                        <global_options>
                            <java_home><%= File.realpath(ENV["JAVA_HOME"]) %></java_home>
                            <java_opts><%= ENV["JAVA_OPTS"] %></java_opts>
                            <jonas_root><%= File.realpath(ENV["JONAS_ROOT"]) %></jonas_root>
                            <jonas_base><%= File.realpath(ENV["JONAS_BASE"]) %></jonas_base>
                            <jonas_services>jtm,security,resource,web,ear,depmonitor,wc,ejb3,validation</jonas_services>
                            <host>localhost</host>
                            <jonas_development>false</jonas_development>
                            <protocols_list>jrmp</protocols_list>
                            <jrmp_port>9102</jrmp_port>
                            <jndi_local_call_optimization>false</jndi_local_call_optimization>
                        </global_options>
                        <web>
                            <https_activated>false</https_activated>
                            <ajp_activated>false</ajp_activated>
                            <http_replication_activated>false</http_replication_activated>
                            <http_conf>
                                <web_conf>
                                    <port><%= ENV["PORT"] %></port>
                                    <maxThreads>120</maxThreads>
                                    <minSpareThreads>5</minSpareThreads>
                                    <maxSpareThreads>10</maxSpareThreads>
                                </web_conf>
                            </http_conf>
                        </web>
                    </configuration>
                </server>
            </servers>
        </domain>
    </domains>
    <applications/>
</topology>
